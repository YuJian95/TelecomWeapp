
.me-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.userInfo-beforeLogin {
  height: 300rpx;
  display: flex;
  align-items: center;
}
.userInfo {
  height: 400rpx;
}
.userInfo-avatar {
  width: 240rpx;
  height: 240rpx;
  margin: 20rpx;
  float: left;
  border-radius: 50%;
}
.userMessage {
  display: flex;
  height: 300rpx;
  padding: 20rpx;
  flex-direction: column;
}
.userName {
  font-size: 50rpx;
  font-weight: bold;
  margin: 20rpx;
}
.address {
  font-size: 30rpx;
  margin: 20rpx;
}
.btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
  margin: auto;
  line-height: 200rpx;
  text-align: center;
}